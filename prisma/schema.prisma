

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id           String    @id @default(cuid()) // Unique ID for the user (e.g., 'clx...')
  username     String    @unique // The user's public, unique name
  email        String    @unique // The user's private, unique email for login
  passwordHash String // The hashed version of their password

  // This creates the one-to-many relationship. One User can have many Links.
  links        Link[]

  createdAt    DateTime  @default(now()) // Set to the time the user is created
  updatedAt    DateTime  @updatedAt // Automatically updates when the user record is changed
}

model Link {
  id        String   @id @default(cuid())
  title     String
  url       String
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
